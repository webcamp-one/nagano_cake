<div class="container">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="text-center m-5 bg-light" style="width:300px;">
      <h3>ジャンル編集</h3>
    </div>
  </div>
  <%= form_with model:@genre ,url: admin_genre_path,method: :patch do |f| %>
  <div class="row">
    <div class="col-md-2">
      <%= f.label:"ジャンル名" %>
    </div>
    <div class="col-md-3">
      <%= f.text_field:name %>
    </div>
    <div class="col-md-2">
      <%= f.submit "変更を保存", class:"btn btn-success" %>
    </div>
    <div class="col-md-2">
      <%= link_to "削除",admin_genre_path(@genre.id), method: :delete, class:"btn btn-danger" %>
    </div>
  </div>
  <% end %>
</div>


  

