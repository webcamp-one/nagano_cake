<div class="container">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="text-center m-5 bg-light" style="width:400px;">
      <h4>
        <%= @customer.last_name %>
        <%= @customer.first_name %>
        さんの会員詳細
      </h4>
    </div>
  </div>
  <table class="table table-borderless">
    <tr>
      <th style="width: 20%">会員ID</th>
      <td style="width: 80%"><%= @customer.id %></td>
    </tr>
    <%= form_with model: @customer,url: admin_customer_path(@customer.id), method: :patch do |f| %>
    <tr>
      <th style="width: 20%">氏名</th>
      <td style="width: 80%">
        <%= f.text_field :last_name %> 
        <span class="ml-5"><%= f.text_field :first_name %></span>
      </td>
    </tr>
    <tr>
      <th style="width: 20%">フリガナ</th>
      <td style="width: 80%">
        <%= f.text_field :last_name_kana %> 
        <span class="ml-5"><%= f.text_field :first_name_kana %></span>
      </td>
    </tr>
    <tr>
      <th style="width: 20%">郵便番号</th>
      <td style="width: 80%"><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <th style="width: 20%">住所</th>
      <td style="width: 80%"><%= f.text_field :address %></td>
    </tr>
    <tr>
      <th style="width: 20%">電話番号</th>
      <td style="width: 80%"><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
      <th style="width: 20%">メールアドレス</th>
      <td style="width: 80%"><%= f.text_field :email %></td>
    </tr>
    <tr>
      <th style="width: 20%">会員ステータス</th>
      <td style="width: 80%">
        <%= f.radio_button :is_deleted,false %>
        <%= f.label :is_deleted,"有効" %>
        <%= f.radio_button :is_deleted,true %>
        <%= f.label :is_deleted,"退会" %>
      </td>
    </tr>
    <tr>
      <th style="width: 20%"></th>
      <td style="width: 80%"><%= f.submit "変更を保存",class:'btn btn-success' %></td>
    </tr>
    <% end %>
  </table>
</div>
