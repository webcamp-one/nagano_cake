<div class="container">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="text-center m-5 bg-light" style="width:400px;">
      <h4>
        <%= @customer.last_name %>
        <%= @customer.first_name %>
        さんの会員詳細
      </h4>
    </div>
  </div>
  <table class="table table-borderless">
    <tr>
      <th style="width: 20%">会員ID</th>
      <td style="width: 80%"><%= @customer.id %></td>
    </tr>
    <tr>
      <th style="width: 20%">氏名</th>
      <td style="width: 80%"><%= @customer.last_name %> <%= @customer.first_name %></td>
    </tr>
    <tr>
      <th style="width: 20%">フリガナ</th>
      <td style="width: 80%"><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <th style="width: 20%">郵便番号</th>
      <td style="width: 80%"><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <th style="width: 20%">住所</th>
      <td style="width: 80%"><%= @customer.address %></td>
    </tr>
    <tr>
      <th style="width: 20%">電話番号</th>
      <td style="width: 80%"><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th style="width: 20%">メールアドレス</th>
      <td style="width: 80%"><%= @customer.email %></td>
    </tr>
    <tr>
      <th style="width: 20%">会員ステータス</th>
      <td style="width: 80%">
        <% if @customer.is_deleted %>
          <label>退会</label>
        <% else %>
          <label>有効</label>
        <% end %>
      </td>
    </tr>
    <tr>
      <th style="width: 20%"></th>
      <td style="width: 80%">
        <%= link_to "編集する",edit_admin_customer_path(@customer.id),class:'btn btn-success' %>
        <span class="ml-5 pl-5"><%= link_to "注文履歴一覧を見る",admin_path,class:'btn btn-primary' %></span>
      </td>
    </tr>
  </table>
</div>