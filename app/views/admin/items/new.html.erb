<h2>商品新規登録</h2>

<div>
  <%= form_with model:@item, url:admin_items_path do |f| %>
    <div>
      <%= f.label :"商品画像" %>
      <%= f.file_field :image %>
    </div>
    <div>
      <%= f.label :"商品名" %>
      <%= f.text_field :name, placeholder:"商品名" %>
    </div>
    <div>
      <%= f.label :"商品説明" %>
      <%= f.text_area :introduction, placeholder:"ここに説明文を記述します" %>
    </div>
    <div>
      <%= f.label :"ジャンル" %>
      <%= f.collection_select :genre_id,Genre.all,:id,:name,options={include_blank: true} %>
    </div>
    <div>
      <%= f.label :"税抜価格" %>
      <%= f.text_area :price,placeholder:"1000" %>円
    </div>
    <div>
      <%= f.label :"販売ステータス" %>
      <%= f.radio_button :is_active,true %>
      <%= f.label :is_active,"販売中" %>
      <%= f.radio_button :is_active,false %>
      <%= f.label :is_active,"販売停止中" %>
    </div>
    <div>
      <%= f.submit "新規登録",class:'btn btn-success' %>
    </div>
  <% end %>
</div>


