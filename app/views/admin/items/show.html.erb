<h2>商品詳細</h2>
<div>
  <%= image_tag @item.get_image(100,100) %>
</div>

<div>
  <label>商品名</label>
  <%= @item.name %>
</div>
<div>
  <label>商品説明</label>
  <%= @item.introduction %>
</div>
<div>
  <label>ジャンル</label>
  <%= @item.genre.name %>
</div>
<div>
  <label>税込価格</label><br>
  <label>(税抜価格)</label>
  <%= (@item.price * 1.1).floor %>
  (<%= @item.price %>)円
</div>
<div>
  <label>販売ステータス</label>
   <% if @item.is_active %>
    <label>販売中</label>
  <% else %>
    <label>販売停止中</label>
  <% end %>
</div>

<%= link_to "編集する",edit_admin_item_path(@item.id), class:"btn btn-success"%>