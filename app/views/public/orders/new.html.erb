<h3>注文情報入力</h3>

<div>
  <%= form_with model: @order, url:orders_information_path, method: :post do |f| %>
    <div>
      <h4>支払方法</h4>
      <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
      <%= f.label :payment_method, "クレジットカード" %><br>

      <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
      <%= f.label :payment_method, "銀行振込" %>
    </div>
    <div>
      <h4>お届け先</h4>
      <div>
        <%= f.radio_button :address_number,1 %>
        <%= f.label :address_number_1,"ご自身の住所" %><br>
        〒<%= current_customer.postal_code %>
        <%= current_customer.address %><br>
        <%= current_customer.last_name %>
        <%= current_customer.first_name %>
      </div>
      <div>
        <%= f.radio_button :address_number,2 %>
        <%= f.label :address_number_2,"登録済住所から選択" %><br>
        <%= f.select :address_number_2,options_from_collection_for_select(Address.all, :id, :address_display) %>
      </div>
      <div>
        <%= f.radio_button :address_number,3 %>
        <%= f.label :address_number_3,"新しいお届け先" %><br>
        <%= f.label :postal_code,"郵便番号(ハイフンなし)" %>
        <%= f.text_field :postal_code %><br>
        <%= f.label :address,"住所" %>
        <%= f.text_area :address %><br>
        <%= f.label :name,"宛名" %>
        <%= f.text_field :name %>
      </div>
      <div>
        <%= f.submit "確認画面へ進む" %>
      </div>
    </div>
  <% end %>
</div>