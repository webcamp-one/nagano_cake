<h3>注文履歴一覧</h3>


<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @order.each do |order| %>
      <tr>
        <td><%= order.created_at %></td>
        <td><%= order.address %></td>
        <td><%= order.item.name %></td>
        <td><%= order.price %></td>
        <td><%= order.order_status %></td>
        <td><%= link_to "表示する",order_path(order.id),class:'btn btn-success' %></td>
      </tr>
    <% end %>
  </tbody>
</table>