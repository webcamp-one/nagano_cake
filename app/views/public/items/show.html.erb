<div class="container px-5 mt-5 px-sm-0">
  <div class="row mt-3">
    <%= render 'public/homes/genre',genres:@genres %>
    <div class="col-md-4" >
      <%= image_tag @item.get_image(100,100) %>
    </div>
    <div class="col-md-5" >
      <p class="h3"><%= @item.name %></p>
      <p class="h4"><%= @item.introduction %></p><br>
      <p class="h4">￥<%= @item.with_tax_price %><span class="h6">(税込)</span></p><br>
      <form class="form-inline">
        <%= form_with model:@cart_items do |f| %>
          <%= f.hidden_field :item_id, :value => @item.id %>
          <div class="form-group mr-3">
            <%= f.select :amount,*[1..10] ,placeholder:"個数選択" %>
          </div>
          <div class="form-group mr-3">
            <%= f.submit "カートに入れる" ,class:'btn btn-success'%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
