<div class="container px-5 mt-5 px-sm-0">
  <div class="row m-3">
    <%= render 'public/homes/genre',genres:@genres %>
    <div class="col-md-9">
      <h3>商品一覧<span class="h5">(全<%= @items.count %>件)</span></h3>
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-md-3 mt-3">
            <%= link_to item_path(item.id) do %>
              <%= image_tag item.get_image(100,100),:width => '100%',:height => '130' ,class:"card-img-top"; %>
            <% end %>
            <p class="text-dark mt-3">
              <%= item.name %>
            </p>
            <p class="text-dark">
              ¥<%= item.price %>
            </p>
          </div>
        <% end %>
      </div>
      <div class="d-flex justify-content-center">
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>

