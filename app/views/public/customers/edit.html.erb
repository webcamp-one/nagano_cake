<div class="container">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="text-center m-5 bg-light" style="width:200px;">
      <h4>会員情報編集</h4>
    </div>
  </div>
  <%= form_with model:@customer,url:"/customers/mypage",method: :patch do |f| %>
  <div class="row">
    <div class="col-md-2">
      <p>氏名</p>
    </div>
    <div class="col-md-3">
      <%= f.text_field:last_name %>
    </div>
    <div class="col-md-4">
      <%= f.text_field:first_name %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <p>フリガナ</p>
    </div>
    <div class="col-md-3">
      <%= f.text_field:last_name_kana %>
    </div>
    <div class="col-md-4">
      <%= f.text_field:first_name_kana %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <p>郵便番号</p>
    </div>
    <div class="col-md-3">
      <%= f.text_field:postal_code %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <p>住所</p>
    </div>
    <div class="col-md-6">
      <%= f.text_field:address %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <p>電話番号</p>
    </div>
    <div class="col-md-5">
      <%= f.text_field:telephone_number %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <p>メールアドレス</p>
    </div>
    <div class="col-md-3">
      <%= f.text_field:email %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-5">
      <%= f.submit "変更内容を保存", class:'btn btn-success' %>
    </div>
    <div class="col-md-3">
      <%= link_to "退会する",customers_quit_path,class:"btn btn-danger" %>
    </div>
  </div>
  <% end %>
</div>

<div>
</div>