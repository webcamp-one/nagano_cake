<h2>会員情報編集</h2>

<div>
  <%= form_with model:@customer,url:"/customers/mypage",method: :patch do |f| %>
  <div>
    <p>氏名</p>
    <%= f.text_field:last_name %>
    <%= f.text_field:first_name %>
  </div>
  <div>
    <p>フリガナ</p>
    <%= f.text_field:last_name_kana %>
    <%= f.text_field:first_name_kana %>
  </div>
  <div>
    <p>郵便番号</p>
    <%= f.text_field:postal_code %>
  </div>
  <div>
    <p>住所</p>
    <%= f.text_area:address %>
  </div>
  <div>
    <p>電話番号</p>
    <%= f.text_field:telephone_number %>
  </div>
  <div>
    <p>メールアドレス</p>
    <%= f.text_field:email %>
  </div>
  <div>
    <%= f.submit "変更内容を保存", class:'btn btn-success' %>
  </div>
  <% end %>
</div>
<div>
  <%= link_to "退会する",customers_quit_path %>
</div>