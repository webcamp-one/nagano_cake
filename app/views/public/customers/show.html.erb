<h2>マイページ</h2>

<div>
  <label>登録情報</label>
  <%= link_to "編集する",customers_mypage_edit_path,class:'btn btn-success' %>
</div>

<table>
  <tr>
    <th>氏名</th>
    <td><%= @customer.last_name %> <%= @customer.first_name %></td>
  </tr>
  <tr>
    <th>カナ</th>
    <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
  </tr>
  <tr>
    <th>郵便番号</th>
    <td><%= @customer.postal_code %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= @customer.telephone_number %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @customer.email %></td>
  </tr>
</table>

<div>
  <label>配送先</label>
  <%= link_to "一覧を見る",addresses_path,class:'btn btn-success' %>
</div>
<div>
  <label>注文履歴</label>
  <%= link_to "一覧を見る",orders_path,class:'btn btn-success' %>
</div>
