<h2>配送先登録/一覧</h2>

<%= form_with model:@address, url:addresses_path, method: :post do |f| %>
<div>
  <label>郵便番号(ハイフンなし)</label>
  <%= f.text_field :postal_code, placeholder:"0000000" %>
</div>
<div>
  <label>住所</label>
  <%= f.text_area :address,  placeholder:"東京都渋谷区代々木神園町0-0" %>
</div>
<div>
  <label>宛名</label>
  <%= f.text_field :name, placeholder:"令和道子" %>
  <%= f.submit "新規登録",class:'btn btn-success' %>
</div>
<% end %>

<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= link_to "編集する",edit_address_path(address.id),class:'btn btn-success' %></td>
      <td><%= link_to "削除する",address_path(address.id),method: :delete, class:'btn btn-success' %></td>
    </tr>
    <% end %>
  </tbody>
</table>
