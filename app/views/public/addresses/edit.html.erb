<div class="container">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="text-center m-5 bg-light" style="width:300px;">
      <h3>配送先編集</h3>
    </div>
  </div>
  <%= form_with model: @address do |f| %>
  <div class="row">
    <div class="col-md-3">
      <label>郵便番号(ハイフンなし)</label>
    </div>
    <div class="col-md-4">
      <%= f.text_field :postal_code %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <label>住所</label>
    </div>
    <div class="col-md-4">
      <%= f.text_field :address,:size => "50*50" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <label>宛名</label>
    </div>
    <div class="col-md-4">
      <%= f.text_field :name %>
    </div>
    <div class="col-md-4 ml-5">
      <%= f.submit "変更内容を保存",class:'btn btn-success' %>
    </div>
  </div>
  <% end %>
</div>
